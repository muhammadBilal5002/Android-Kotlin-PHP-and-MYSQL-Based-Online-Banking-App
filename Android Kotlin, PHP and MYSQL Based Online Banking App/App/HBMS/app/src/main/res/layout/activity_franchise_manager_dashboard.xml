<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Franchise_Manager_Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/Acc_Email"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/Acc_Balance"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Acc_WithDraw"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="Refresh"
            android:text="Refresh" />

        <Button
            android:id="@+id/MT"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:onClick="Add_Balance"
            android:layout_height="wrap_content"
            android:text="Add Balance" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/BP"
            android:layout_width="match_parent"
            android:onClick="WithDraw_Balance"
            android:layout_height="wrap_content"
            android:text="WithDraw Balance" />

        <Button
            android:id="@+id/TH"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Transaction_History"
            android:text="Transaction History" />

        <Button
            android:id="@+id/LO"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Logout"
            android:text="Logout" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>