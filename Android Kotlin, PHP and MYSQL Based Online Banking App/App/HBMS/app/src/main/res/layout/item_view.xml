<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="10dp"
    android:background="#19005EFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/t_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Transaction Id: 880"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/sender_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sender Email: muhammadsfadfdffsdf"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/reciver_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Reciver Email: muhammadsfadfdffsdf"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/Transaction_Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Transaction Amount: 5000"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/Transaction_Purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Transaction Purpose: "
            android:textColor="@color/black"></TextView>


        <TextView
            android:id="@+id/Transaction_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:text="Transaction Date: 20250-454"
            android:textColor="@color/black"></TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>